        android:text="Hi Jake, how are you?"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        android:layout_gravity="end|top"
        android:layout_marginEnd="@dimen/_10sdp"
        />

</LinearLayout>