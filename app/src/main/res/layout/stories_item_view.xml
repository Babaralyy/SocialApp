<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.codecoy.mvpflycollab.utils.shapes.PolygonImageView
        android:id="@+id/ivStoryImage"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mod2_img"
        app:poly_border="true"
        app:poly_border_color="#f01"
        app:poly_border_width="5dp"
        app:poly_corner_radius="25"
        app:poly_rotation_angle="55"
        app:poly_shadow="true"
        app:poly_shadow_color="@color/white"
        app:poly_vertices="5"
        />

    <TextView
        android:id="@+id/tvStoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="AbdUllah"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintEnd_toEndOf="@+id/ivStoryImage"
        app:layout_constraintStart_toStartOf="@+id/ivStoryImage"
        app:layout_constraintTop_toBottomOf="@id/ivStoryImage" />


    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>