<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".ui.fragments.JourneyFragment">

    <TextView
        android:id="@+id/tv_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:gravity="center"
        android:text="@string/journey_small"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/lato"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_backpress" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJourney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        tools:listitem="@layout/journey_item_view"
        android:layout_below="@id/btn_back"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        android:background="@drawable/fab_back"
        android:backgroundTint="@null"
        app:shapeAppearance="@drawable/fab_back"
        app:shapeAppearanceOverlay="@drawable/fab_back"
        android:contentDescription="@string/add_event"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvNoDataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:text="@string/no_data_found"
        android:textColor="@color/white"
        android:fontFamily="@font/lato"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>