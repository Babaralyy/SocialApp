<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragments.AboutProfileFragment">

        <com.codecoy.mvpflycollab.utils.shapes.PolygonImageView
            android:id="@+id/ivAboutProfileImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/img3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:poly_border="true"
            app:poly_border_color="@android:color/white"
            app:poly_border_width="5dp"
            app:poly_corner_radius="25"
            app:poly_rotation_angle="55"
            app:poly_shadow="true"
            app:poly_shadow_color="#f01"
            app:poly_vertices="5" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/lato"
            android:text="@string/dummy"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivAboutProfileImage"
            app:layout_constraintStart_toStartOf="@+id/ivAboutProfileImage"
            app:layout_constraintTop_toBottomOf="@id/ivAboutProfileImage" />

        <TextView
            android:id="@+id/tvAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/about_me"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/poppins"
            android:text="@string/dummy"
            android:textColor="@color/black2"
            android:textSize="12sp"
            android:lineSpacingExtra="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutMe" />

        <View
            android:id="@+id/View"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_about" />

        <TextView
            android:id="@+id/tv_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/dummy"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="@+id/tvAboutMe"
            app:layout_constraintTop_toBottomOf="@+id/View"
            app:drawableStartCompat="@drawable/ic_home" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddJourney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_15sdp"
            android:text="@string/add_a_journey_photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/lato"
            app:cornerRadius="10dp"
            app:iconGravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/View"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_15sdp"
            android:text="@string/add_a_playlist_video"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/lato"
            app:cornerRadius="10dp"
            app:iconGravity="start"
            app:layout_constraintEnd_toEndOf="@+id/btnAddJourney"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="@+id/btnAddJourney"
            app:layout_constraintTop_toBottomOf="@+id/btnAddJourney"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_15sdp"
            android:text="@string/add_activity_to_calendar"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/lato"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/btnAddPlaylist"
            app:layout_constraintStart_toStartOf="@+id/btnAddPlaylist"
            app:layout_constraintTop_toBottomOf="@+id/btnAddPlaylist"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>